<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mypage.setting.NotificationSettingFragment">

        <TextView
            android:id="@+id/tv_setting_notification_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/base_horizontal_margin"
            android:text="알림 받기"
            style="@style/base_font_medium_14_dim_gray"/>

        <Switch
            android:id="@+id/sw_setting_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_setting_notification_friend"
            app:layout_constraintBottom_toBottomOf="@+id/tv_setting_notification_friend"
            android:layout_margin="@dimen/base_horizontal_margin"
            android:track="@drawable/bg_switch_track"
            style="@style/switchCustom"/>


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/dv_setting_notification"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/base_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_setting_notification_friend"/>

        <TextView
            android:id="@+id/tv_setting_notification_running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dv_setting_notification"
            android:layout_margin="@dimen/base_horizontal_margin"
            android:text="@string/title_request_running"
            style="@style/base_font_medium_14_dim_gray"/>

        <Switch
            android:id="@+id/sw_setting_notification_running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_setting_notification_running"
            app:layout_constraintBottom_toBottomOf="@+id/tv_setting_notification_running"
            android:layout_margin="@dimen/base_horizontal_margin"
            android:track="@drawable/bg_switch_track"
            style="@style/switchCustom"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
