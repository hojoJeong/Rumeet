<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        tools:context=".ui.running.option.multi.RunningOptionTeamPlayFragment">

        <include
            layout="@layout/content_running_option_difficulty"
            android:id="@+id/content_running_option_team_difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_horizontal_margin"
            android:layout_marginHorizontal="@dimen/base_horizontal_margin"/>

        <include
            android:id="@+id/content_running_option_distance"
            layout="@layout/content_running_option_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/base_horizontal_margin"
            android:layout_marginTop="22dp" />

        <include
            android:id="@+id/content_running_option_team_with"
            layout="@layout/content_running_option_with"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/base_horizontal_margin"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
