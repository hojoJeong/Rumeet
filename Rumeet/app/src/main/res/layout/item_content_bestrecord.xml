<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="record"
            type="com.d204.rumeet.ui.home.model.BestRecordUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_content_best_record_distance"
            style="@style/base_font_bold_16_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_content_title_best_record_distance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/content_distance"
            app:setBestRecord="@{record.value}"/>

        <TextView
            android:id="@+id/tv_item_content_title_best_record_distance"
            style="@style/base_font_medium_14_dim_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{record.title}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_item_content_best_record_distance"
            app:layout_constraintStart_toStartOf="@+id/tv_item_content_best_record_distance"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_content_best_record_distance" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
