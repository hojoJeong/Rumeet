<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.d204.rumeet.ui.chatting.ChattingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whisper"
        tools:context=".ui.chatting.ChattingFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chatting_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_chatting_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/base_vertical_margin"/>

        <EditText
            android:id="@+id/edit_chatting_input"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="8dp"
            android:paddingEnd="20dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/bg_rect_transparent_white_round8_stroke0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/btn_chatting_submit"
            style="@style/base_font_bold_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="전송"
            android:textColor="@color/prussian_blue"
            app:layout_constraintBottom_toBottomOf="@+id/edit_chatting_input"
            app:layout_constraintEnd_toEndOf="@+id/edit_chatting_input"
            app:layout_constraintTop_toTopOf="@+id/edit_chatting_input" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
