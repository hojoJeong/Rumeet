    <!-- custom toggle btn -->
    <style name="toggleButtonCustom" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/tv_toggle</item>
        <item name="backgroundTint">@color/bg_toggle</item>
        <item name="fontFamily">@font/notosanskr_bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="toggleButtonCustomDifficultyEasy" parent="Widget.MaterialComponents.Button">
