    </style>

    <style name="base_font_medium_16_white" parent="base_font_medium_16">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="base_font_medium_18" parent="base_font_medium">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- bold color -->
    <style name="base_font_bold_12_neon_blue" parent="base_font_bold_12">
        <item name="android:textColor">@color/neon_blue</item>
    </style>

    <style name="base_font_bold_14_black" parent="base_font_bold_14">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="base_font_bold_16_black" parent="base_font_bold_16">
